{
  "name": "@love-parser/backend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "vitest",
    "db:migrate": "knex migrate:latest --knexfile knexfile.cjs",
    "db:rollback": "knex migrate:rollback --knexfile knexfile.cjs",
    "db:seed": "tsx src/scripts/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/helmet": "^13.0.2",
    "bull": "^4.13.1",
    "dotenv": "^16.4.7",
    "fastify": "^4.28.1",
    "@fastify/jwt": "^9.1.0",
    "telegram": "^2.26.22",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pg": "^8.13.1",
    "redis": "^4.7.0",
    "winston": "^3.14.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.16.5",
    "@types/supertest": "^2.0.16",
    "supertest": "^6.3.4",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vitest": "^2.1.5"
  }
}

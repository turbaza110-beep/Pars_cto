{
  "name": "love-parser-monorepo",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "dev": "concurrently -n backend,frontend -c green,cyan \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "dev:backend": "pnpm --filter @love-parser/backend dev",
    "dev:frontend": "pnpm --filter @love-parser/frontend dev",
    "build": "npm run build --prefix frontend",
    "build:frontend": "pnpm --filter @love-parser/frontend build",
    "lint": "pnpm --filter @love-parser/frontend lint",
    "test:backend": "pnpm --filter @love-parser/backend test",
    "postinstall": "npm install --prefix backend --package-lock=false && npm install --prefix frontend --package-lock=false"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
